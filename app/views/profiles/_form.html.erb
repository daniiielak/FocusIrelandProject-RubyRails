<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="yellow-surrounding-box">
  <div class="field", style = "font-size: 20px; margin-top: 30px;">
    <%= form.label :firstname %>
    <%= form.text_field :firstname, id: :profile_firstname, class: "edit-input" %>
  </div>

  <div class="field", style = "font-size: 20px;">
    <%= form.label :lastname %>
    <%= form.text_field :lastname, id: :profile_lastname, class: "edit-input" %>
  </div>

  <div class="field", style ="margin-left: 10px; font-size: 20px">
    <%= form.label :address %>
    <%= form.text_field :address, id: :profile_address, class: "edit-input" %>
  </div>
  

  <div class="fielduser">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, id: :profile_user_id %>
  </div>

  <%= link_to "Change your password", edit_user_registration_path %>
  
  <div class="actions", style = "font-size:20px; margin-top: 30px;">
    <%= form.submit %>
  </div>
</div>
<% end %>
